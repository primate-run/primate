{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "${configDir}",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "customConditions": ["apekit"],
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx"
  }
}
