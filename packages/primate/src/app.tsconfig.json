{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "${configDir}",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": true
  }
}
