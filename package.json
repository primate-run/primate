{
  "name": "@primate/monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter='./packages/**' build",
    "build:apps": "pnpm -r --filter='./apps/**' build",
    "clean": "pnpm -r clean",
    "publish": "pnpm -r --access=public --otp=$(bw get totp npmjs.com) publish",
    "upgrade": "pnpm -r update -i -L",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -r test",
    "test:apps": "pnpm -r --filter='./apps/**' test",
    "sweep": "rm -rf node_modules pnpm-lock.yaml {app,package}s/*/node_modules",
    "knip": "knip"
  },
  "devDependencies": {
    "@rcompat/test": "^0.5.0",
    "@rcompat/type": "^0.6.1",
    "@types/deno": "^2.5.0",
    "@types/node": "^24.10.1",
    "apekit": "^0.0.41",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "knip": "^5.70.2",
    "proby": "^0.4.1",
    "typescript": "^5.9.3"
  }
}
